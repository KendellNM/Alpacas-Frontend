<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using Material Components -->
    <style name="Theme.Alpaca" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/success</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <!-- Custom TextInputLayout Style -->
    <style name="Widget.Alpaca.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="Widget.Alpaca.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <!-- Success Button Style -->
    <style name="Widget.Alpaca.Button.Success" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/success</item>
    </style>
    
    <!-- Danger Button Style -->
    <style name="Widget.Alpaca.Button.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/danger</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.Alpaca.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>
